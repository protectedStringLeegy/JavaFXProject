<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.Pane?>
<ToolBar prefHeight="39.0" prefWidth="433.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mailProject.client.Classes.ClientToolbarController">
  <items>
    <Button fx:id="replyButton" mnemonicParsing="false" onAction="#replyTo" text="Reply" />
      <Button fx:id="replyAllButton" mnemonicParsing="false" onAction="#replyAll" text="Reply All" />
      <Button fx:id="forwardButton" mnemonicParsing="false" onAction="#forwardTo" text="Forward" />
      <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteMail" text="Delete" />
      <Button mnemonicParsing="false" onAction="#newMail" text="New mail" />
      <Pane HBox.hgrow="ALWAYS" />
      <Button fx:id="connection" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" scaleX="0.5" scaleY="0.5" />
      <Button fx:id="refreshButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="357.0" layoutY="10.0" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" onAction="#refreshPressed">
          <graphic>
              <ImageView fitHeight="20.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@refresh.png" />
                  </image>
              </ImageView>
          </graphic>
      </Button>
  </items>
</ToolBar>
